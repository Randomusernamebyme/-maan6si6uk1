rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function: 檢查用戶是否為管理員
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function: 檢查用戶是否為已審核的義工
    function isApprovedVolunteer() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'volunteer' &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved';
    }

    // 用戶集合
    match /users/{userId} {
      // 用戶只能讀取和更新自己的資料
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // 管理員可以讀取所有用戶資料
      allow read: if isAdmin();
      // 管理員可以更新所有用戶資料
      allow write: if isAdmin();
    }
    
    // 委托集合
    match /requests/{requestId} {
      // 任何人都可以創建委托（status 必須是 'pending'）
      allow create: if request.resource.data.status == 'pending';
      
      // 義工和管理員可以讀取公開的委托（status='open'）
      allow read: if request.auth != null && 
        (resource.data.status == 'open' || isAdmin());
      
      // 只有管理員可以更新和刪除委托
      allow update, delete: if isAdmin();
    }
    
    // 報名記錄集合
    match /applications/{applicationId} {
      // 已審核的義工可以創建報名記錄
      allow create: if isApprovedVolunteer() && 
        request.resource.data.volunteerId == request.auth.uid &&
        request.resource.data.status == 'pending';
      
      // 義工可以讀取自己的報名記錄
      allow read: if request.auth != null && 
        (resource.data.volunteerId == request.auth.uid || isAdmin());
      
      // 只有管理員可以更新和刪除報名記錄
      allow update, delete: if isAdmin();
    }
    
    // 通知集合
    match /notifications/{notificationId} {
      // 用戶只能讀取自己的通知
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // 只有管理員可以創建通知
      allow write: if isAdmin();
    }
    
    // 操作日誌集合
    match /activity_logs/{logId} {
      // 只有管理員可以讀寫操作日誌
      allow read, write: if isAdmin();
    }
    
    // 系統設定集合
    match /settings/{settingId} {
      // 只有管理員可以讀寫設定
      allow read, write: if isAdmin();
    }
  }
}


